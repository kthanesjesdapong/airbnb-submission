{
    "compilerOptions": {

      /*Dynamic Imports*/
      "baseUrl": "./src",
      "paths": {
        "@app": ["./app"],
        "@app/*": ["./app/*"],
        
        "@assets": ["./assets"],
        "@assets/*": ["./assets/*"],

        "@pages": ["./pages"],
        "@pages/*": ["./pages/*"],

        "@widgets": ["./widgets"],
        "@widgets/*": ["./widgets/*"],

        "@features": ["./features"],
        "@features/*": ["./features/*"],

        "@entities": ["./entities"],
        "@entities/*": ["./entities/*"],

        "@shared": ["./shared"],
        "@shared/*": ["./shared/*"],
      },

      /*Linting*/
      "strict": true,
      "noImplicitAny": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true,

      /*UMD Global*/
      "jsx": "react-jsx",

      "outDir": "./dist/",
      "sourceMap": true,
      "target": "ESNext",
      "useDefineForClassFields": true,
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
      "allowJs": false,
      "skipLibCheck": true,
      "esModuleInterop": false,
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "module": "ESNext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true 
    },
    "include": [
      "src/*",
      "src/**/*",
      "types/*.d.ts",
    ],
  }