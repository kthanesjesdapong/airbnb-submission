{
    "plugins": [
        "@typescript-eslint",
        "import"
    ],
    "rules": {
        "import/no-unresolved": "error"
    },
    "settings": {
        "import/parsers": {
            "@typescript-eslint/parser": [".ts",".xtsx"]
        }
    },
    "import/resolver": {
        "typescript": {
            "alwaysTryTypes": true,
            "project": "./tsconfig.json"
        }
    },
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/jsx-runtime" 
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
}